<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager.Views.EditNotePage"
             >
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <DatePicker Date="{Binding CreatedOn}" Format="MM.dd.yyyy" Margin="10,0,0,0"/>
            <TimePicker Time="{Binding CreatedOn.TimeOfDay}" Format="hh:mm"/>
        </HorizontalStackLayout>
        
        <Entry x:Name="title" Text="{Binding Title}" FontSize="18" Margin="10,0,10,0" Placeholder="Заголовок"/>

        <Editor x:Name="text" Text="{Binding Text}" AutoSize="TextChanges" FontSize="14" Margin="10,0,10,0" />
    </VerticalStackLayout>
</ContentPage>